<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GithubProfile</title>
    <style>

      .form {
        width: 500px;
        margin: 50px auto;
      }
      
    </style>

    <link rel="stylesheet" href="styles/main.css">
  </head>
  <body>
    <div class="container">
      <a href="/">
        <h1 class="center">GithubProfile reports</h1>
      </a>
      <section class="form">
        <form action="/report" method="post" enctype="multipart/form-data" class="form-horizontal">
          <div class="control-group">
            <label class="control-label" for="inputProfile">
              Github profile:
            </label>
            <div class="controls">
              <input class="input-medium" type="text" name="profile" placeholder="janantala" id="inputProfile">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="inputTimezone">
              Timezone:
            </label>
            <div class="controls">
              <input class="input-medium" type="text" name="timezone" value="Europe/Bratislava" placeholder="Europe/Bratislava" id="inputTimezone" required >
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="inputCSV">
              CSV:
            </label>
            <div class="controls">
              <input type="file" name="csv" accept=".csv" id="inputCSV" required >
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <button type="submit" class="btn btn-success">Show me reports!</button>
            </div>
          </div>
        </form>

      </section>

    </div>
  </body>
</html>